@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RuKou</title>
    <style type="text/css">
        .imgweixin {
            position: fixed;
            top: 10%;
            left: 40%;
            height: 80%;
            display: none;
        }

        .app {
            position: fixed;
            top: 5%;
            left: 40%;
            display: none;
        }

        .shang, .zhong, .xia, .guan, .shen, .xiang {
            width: 350px;
            height: 210px;
            position: absolute;
        }

        .shang {
            top: 6.5%;
        }

        .zhong {
            top: 37.7%;
        }

        .xia {
            bottom: 0;
        }

        .guan {
            top: 0;
            right: 0;
            height: 45px;
            width: 45px;
        }

        .shen {
            height: 250px;
            top: 32%;
            display: none;
        }

        .xiang {
            z-index: 999;
            top: 6.5%;
            display: none;
        }
    </style>
</head>
<body>
    <div style="text-align:center;">
        <button style="width:200px;height:100px;margin-bottom:20px;">门户</button><br />
        <button style="width:200px;height:100px;margin-bottom:20px;">后台</button><br />
        <button style="width:200px;height:100px;margin-bottom:20px;">APP</button><br />
        <button style="width:200px;height:100px;margin-bottom:20px;">微信</button><br />
    </div>
    <img src="~/img/weixin.jpg" class="imgweixin" />
    <div class="app">
        <img src="~/img/NewFolder1/01.jpg" />
        <div class="shang"></div>
        <div class="zhong"></div>
        <div class="xia"></div>
        <div class="guan"></div>
        <div class="shen er"></div>
        <div class="xiang er"></div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script type="text/javascript">
    $("button").click(function () {
        var str = $(this).html();
        if (str == "门户") {
            location.href = "../../main/main";
        } else if (str == "后台") {
            location.href = "../../main/index";
        } else if (str == "微信") {
            $(".imgweixin").show().click(function () {
                $(this).hide();
            })
        } else if (str == "APP") {
            $(".app").show().children().click(function () {
                var str = $(this).attr("class");
                if (str == "shang") {
                    $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/06.png");
                    $(".shen").show().click(function () {
                        $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/02.jpg");
                        $(".xiang").show().click(function () {
                            $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/04.jpg");
                        })
                    });
                } else if (str == "zhong") {
                    $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/03.jpg");
                    $(".xiang").show().click(function () {
                        $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/04.jpg");
                    })
                }
            })
        }
    })
    $(".guan").click(function () {
        $(this).parent().hide();
        $(this).parent().children().eq(0).attr("src", "../../img/NewFolder1/01.jpg");
        $(this).parent().children(".er").hide();
    })


</script>
